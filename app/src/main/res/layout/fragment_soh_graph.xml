<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary"
    android:gravity="center"
    android:padding="16dp">

    <!-- Content Container with upward bias -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-80dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SOH Over Time"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/gold_primary"
            android:textAlignment="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Graph Note -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100% will show for years prior to model year"
            android:textSize="12sp"
            android:textColor="@color/gold_secondary"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="16dp" />

        <!-- Chart Container -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Chart -->
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/line_chart"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Reset Button -->
                <Button
                    android:id="@+id/btn_reset_graph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reset Graph"
                    android:textColor="@color/gold_primary"
                    android:backgroundTint="@color/button_accent"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Statistics -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Statistics"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/gold_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/text_total_readings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Readings: 0"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/text_current_soh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current SOH: N/A"
                    android:textSize="14sp"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Yearly Degradation Box -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yearly Degradation"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/gold_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/text_yearly_degradation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No degradation data available"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/text_average_yearly_degradation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Average Yearly Degradation: N/A"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>
