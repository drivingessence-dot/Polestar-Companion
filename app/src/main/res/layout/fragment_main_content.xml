<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="32dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:background="@color/background_primary"
        android:gravity="center_horizontal">

        <!-- App Logo Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:paddingTop="48dp">

            <!-- Connection Settings Button -->
            <ImageButton
                android:id="@+id/btn_connection_settings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_background"
                android:src="@drawable/ic_connection"
                android:contentDescription="Connection Settings"
                android:scaleType="centerInside"
                android:padding="12dp" />

            <!-- Polestar Companion Logo -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/app_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Polestar Companion"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/gold_primary"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05" />

                <TextView
                    android:id="@+id/app_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OBD-II Vehicle Monitor"
                    android:textSize="14sp"
                    android:textColor="@color/gold_secondary"
                    android:fontFamily="sans-serif"
                    android:letterSpacing="0.02"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Settings Button - Top Left -->
            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_background"
                android:contentDescription="Settings"
                android:src="@drawable/ic_settings"
                android:scaleType="centerInside"
                android:padding="12dp" />

        </RelativeLayout>

        <!-- Connection Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/connection_status_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connection Status"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Initializing..."
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/gold_secondary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Control Buttons -->
        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <!-- Start/Stop Monitoring Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="2dp">

                <Button
                    android:id="@+id/btn_start_monitoring"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Start Monitoring"
                    android:textColor="@color/gold_primary"
                    android:backgroundTint="@color/dark_blue_primary"
                    android:textSize="12sp"
                    android:enabled="true" />

                <Button
                    android:id="@+id/btn_stop_monitoring"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Stop Monitoring"
                    android:textColor="@color/gold_primary"
                    android:backgroundTint="@color/dark_blue_secondary"
                    android:textSize="12sp"
                    android:enabled="false" />

            </LinearLayout>

            <!-- Refresh Button -->
            <Button
                android:id="@+id/btn_refresh_data"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Refresh Data"
                android:textColor="@color/gold_primary"
                android:backgroundTint="@color/button_accent"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Real-Time CAN Data Dashboard -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gold_border_background"
            android:padding="4dp">

        <!-- Live Data Header -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/live_data_header_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸš— Live CAN Data Dashboard"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/gold_primary"
                    android:layout_marginBottom="4dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/text_can_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CAN Status: Active"
                    android:textSize="14sp"
                    android:textColor="@color/gold_secondary"
                    android:gravity="center"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/text_message_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Messages: 0"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:gravity="center" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- SOH Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/soh_info_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”‹ Battery State of Health"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/gold_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/text_soh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Battery SOH: "
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <Button
                    android:id="@+id/btn_get_soh"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Get SOH from BECM"
                    android:textColor="@color/gold_primary"
                    android:backgroundTint="@color/button_accent"
                    android:textSize="11sp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Vehicle Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/vehicle_info_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸš™ Vehicle Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/gold_primary"
                    android:layout_marginBottom="4dp" />

                <!-- Year Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Year:"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="8dp" />

                    <Spinner
                        android:id="@+id/spinner_year"
                        android:layout_width="80dp"
                        android:layout_height="32dp"
                        android:background="@android:color/white"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp" />

                    <TextView
                        android:id="@+id/text_selected_year"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2021 (choose yours)"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="8dp"
                        android:gravity="start|center_vertical" />

                </LinearLayout>

                <!-- Real-time data grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/text_speed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸƒ Speed: 0 km/h"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/text_gear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="âš™ï¸ Gear: P"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text_vin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ†” VIN: LP1K4M014708"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/text_odometer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Odometer: 0 km"
                    android:textSize="14sp"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Battery Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/battery_info_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš¡ Battery Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/gold_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/text_soc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”‹ SOC: 66.7%"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/text_voltage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš¡ 12V Battery: 13.7V"
                    android:textSize="16sp"
                    android:textColor="@android:color/white" />

                <!-- Battery progress bar -->
                <ProgressBar
                    android:id="@+id/progress_battery_soc"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="67"
                    android:max="100"
                    android:progressTint="@color/gold_primary"
                    android:progressBackgroundTint="@color/dark_blue_secondary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Climate Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/climate_info_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ¡ï¸ Climate Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/gold_primary"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/text_ambient"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸŒ¡ï¸ Ambient: 13Â°C"
                        android:textSize="16sp"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/text_last_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Just now"
                        android:textSize="12sp"
                        android:textColor="@color/gold_secondary" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        </LinearLayout> <!-- End Information Boxes Container -->

    </LinearLayout>

</ScrollView>


