<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme for Polestar Companion -->
    <style name="Theme.PolestarCompanion" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color - Dark Blue -->
        <item name="colorPrimary">@color/dark_blue_primary</item>
        <item name="colorPrimaryVariant">@color/dark_blue_secondary</item>
        <item name="colorOnPrimary">@color/gold_primary</item>
        
        <!-- Secondary brand color - Gold -->
        <item name="colorSecondary">@color/gold_primary</item>
        <item name="colorSecondaryVariant">@color/gold_secondary</item>
        <item name="colorOnSecondary">@color/background_primary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/background_card</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/background_primary</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Action bar -->
        <item name="colorPrimaryDark">@color/background_primary</item>
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
    </style>
    
    <!-- Custom Action Bar Style -->
    <style name="CustomActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:background">@color/dark_blue_primary</item>
        <item name="titleTextColor">@color/gold_primary</item>
    </style>
    
    <!-- Button Styles -->
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/button_text</item>
        <item name="strokeColor">@color/gold_primary</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Card Style -->
    <style name="CardDark" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>
</resources>